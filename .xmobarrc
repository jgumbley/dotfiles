Config { font = "xft:Source Code Pro-12:"
, bgColor = "#086FA1"
, fgColor = "#ffffff"
, borderColor = "#086FA1"
, position = Bottom 
, lowerOnStart = True
, commands = [ Run Memory ["-t","Mem: <usedratio>%"] 10
             , Run Swap [ ] 10
             , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
             , Run StdinReader
             ]
, sepChar = "%"
, border = FullB 3
, alignSep = "}{"
, template = "    %StdinReader% }{%date% "
}

